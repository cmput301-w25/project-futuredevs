<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication"
    tools:ignore="ExtraText">

    <!-- To request approximate location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- To request precise location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- MainActivity as the launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SignUpActivity declaration -->
        <activity
            android:name=".SignUpActivity"
            android:exported="true" />

        <!-- HomeActivity declaration -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <!-- NewMoodActivity declaration -->
        <activity
            android:name=".NewMoodActivity"
            android:exported="true" />

        <activity
            android:name=".ViewMoodActivity"
            android:exported="false" />



    </application>

</manifest>
